@section Scripts {
    @Scripts.Render("~/Scripts/BasketScript.js")
}
<br />



<div class="container">
    <br />

    <div class="row">
        <h3 id="info" style="text-align:left;background-color:yellow;">User is not logged in</h3>

        <button class="btn btn-default" style="background-color:yellow;width:163px; margin-left:86%" id="regLogButt">Register and login</button>
        <button class="btn btn-default" style="display: none; background-color: yellow; width: 123px; margin-left: 89%" id="beginButt">Begining</button>
        <button id="logOutButt" class="btn btn-danger" style="display:none;margin-left:90%; width:75px;"> Logout </button>

    </div>

    <br />
    <br />

    <div class="row">

        <div class="col-sm-3">

        </div>

        <div class="col-sm-8">
            <form class="form-horizontal" id="logForm"  style="display:none">
                <h3 style="margin-left:30%">Login</h3>
                <br />
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Email:</label>
                    <div class="col-sm-6">
                        <input type="email" class="form-control" id="logEmail" placeholder="Enter email" name="email">
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Password:</label>
                    <div class="col-sm-6">
                        <input type="password" class="form-control" id="logPass" placeholder="Enter password" name="pwd">
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default" style="width:100px;margin-right:12%; background-color:yellow">Login</button>
                        <button id="regButt" class="btn btn-default" style=" width:100px">Registration</button>
                    </div>
                </div>
            </form>


            <form class="form-horizontal" id="regForm"  style="display:none">
                <h3 style="margin-left:18%">Registration</h3>
                <br />
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Email:</label>
                    <div class="col-sm-6">
                        <input type="email" class="form-control" id="regEmail" placeholder="Enter email" name="email">
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Password:</label>
                    <div class="col-sm-6">
                        <input type="password" class="form-control" id="regPass" placeholder="Enter password" name="pwd">
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label class="control-label col-sm-2" for="pwd">Password:</label>
                    <div class="col-sm-6">
                        <input type="password" class="form-control" id="regPass1" placeholder="Enter password" name="pwd">
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit"class="btn btn-default" style="width:100px;margin-right:12%; background-color:yellow">Register</button>
                        <button id="logButt" class="btn btn-default" style=" width:100px">Log</button>
                    </div>
                </div>
            </form>
        </div>

    </div>


    <br />
    <br />

    <div class="row">
        <button id="refresh" class="btn btn-default" style="display:none;background-color:yellow; width:105px;">Refresh table</button>


        <div id="data" style="text-align:center">

        </div>
        <br />
        <br />
        <br />

        <div class="col-sm-4" id="searchPlayer" style="display:none">
            <form method="post" action="post/">
                <h4><strong>Search player by matches</strong></h4>
                <br />
                <div class="form-inline">
                    <label for="from" style="margin-right:30px">From:</label>
                    <input type="number" class="form-control" id="from" placeholder="Enter number of matches" style="margin-right:50px">
                </div>
                <br />
                <div class="form-inline">
                    <label for="to" style="margin-right:48px">To:</label>
                    <input type="number" class="form-control" id="to" placeholder="Enter number of matches">
                </div>
                <br />
                <button type="submit" class="btn btn-default" style="background-color:yellow;margin-left:93px;  width:90px;">Search</button>
            </form>
        </div>











    </div>
    <br />
    <br />

    <div class="row">

        <div class="col-sm-offset-4 col-sm-4">
            <form class="form-horizontal" method="post" action="post/" id="editForm" style="display:none">
                <h3 style="text-align:center">Edit player</h3>
                <br />
                <div class="form-group">
                    <label class="control-label col-sm-pull-4">Name:</label>
                    <div class="col-sm-8" style="float:right">
                        <input type="text" class="form-control" id="nameEdit" required minlength="2" maxlength="50">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-pull-4">Born:</label>
                    <div class="col-sm-5" style="float:right">
                        <input type="number" class="form-control" id="bornEdit" required min="1975" max="2003">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-pull-4">Club:</label>
                    <div class="col-sm-7" style="float:right">
                        <select class="form-control" id="clubEdit" required></select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-pull-4">Matches:</label>
                    <div class="col-sm-5" style="float:right">
                        <input type="number" class="form-control" id="matchesEdit" required min="0">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-pull-4">Points average:</label>
                    <div class="col-sm-5" style="float:right">
                        <input type="number" class="form-control" id="pointEdit" required min="0" max="29" step="0.1">
                    </div>
                </div>


                <br />
                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-default" style="float:left;width:95px;background-color:yellow">Edit</button>
                        <button id="back" class="btn btn-default" style="float:right;width:95px;margin-right:4%">Back</button>
                    </div>
                </div>
            </form>
        </div>



    </div>





</div>